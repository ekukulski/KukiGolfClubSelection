<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KukiGolfClubSelection.ClubAndDistancePage">

    <Grid Padding="20"
          RowDefinitions="Auto,*,Auto,Auto"
          RowSpacing="10">

        <!-- Page Title -->
        <Label Grid.Row="0"
               Text="Edit Clubs and Distances"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               FontSize="24"
               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource FloralWhite}}"
               Margin="0,0,0,10"/>

        <!-- Page-scoped styles -->
        <Grid.Resources>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource FloralWhite}}" />
                <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource FloralWhite}}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gainsboro}, Dark={StaticResource DarkGray}}" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="Margin" Value="0,2" />
            </Style>
        </Grid.Resources>

        <!-- Club / Distance List (scrolls automatically) -->
        <CollectionView Grid.Row="1"
                        x:Name="clubListView"
                        ItemsSource="{Binding ClubDistances}"
                        VerticalScrollBarVisibility="Always">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="10">
                        <Entry Text="{Binding Club}"
                               WidthRequest="120" />

                        <Entry Text="{Binding MaxDistance}"
                               WidthRequest="80"
                               Keyboard="Numeric" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Action Buttons -->
        <Button Grid.Row="2"
                Text="Save Changes"
                Clicked="OnSaveClicked"
                FontSize="24"
                BackgroundColor="DarkSeaGreen"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource FloralWhite}}"/>

        <Button Grid.Row="3"
                Text="Return"
                Clicked="OnReturnClicked"
                FontSize="24"
                BackgroundColor="IndianRed"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource FloralWhite}}"/>
    </Grid>
</ContentPage>
