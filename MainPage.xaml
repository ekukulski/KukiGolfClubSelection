<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GolfClubSelectionApp.MainPage"
             BackgroundColor="Black">

    <ContentPage.Resources>
        <Style x:Key="TableLabelStyle" TargetType="Label">
            <Setter Property="TextColor" Value="Black" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Golf Club Selection"
               Grid.Row="0"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               FontSize="24"
               TextColor="FloralWhite"
               Margin="0,0,0,10" />

        <!-- No Expand needed: it will fill because the row is "*" -->
        <ScrollView Grid.Row="1"
                    VerticalOptions="Fill">

            <VerticalStackLayout Padding="20" Spacing="12">

                <Picker x:Name="coursePicker"
                        TextColor="FloralWhite"
                        Title="Select Course" />

                <VerticalStackLayout x:Name="courseInfoPanel"
                                     IsVisible="False"
                                     Spacing="4">
                    <Label x:Name="courseNameLabel"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="FloralWhite" />
                    <Label x:Name="courseDetailsLabel"
                           FontSize="14"
                           TextColor="FloralWhite" />
                </VerticalStackLayout>

                <HorizontalStackLayout Spacing="8"
                                       VerticalOptions="Start">
                    <Label Text="Default Driver:"
                           VerticalOptions="Center"
                           TextColor="FloralWhite" />
                    <Picker x:Name="defaultDriverPicker"
                            TextColor="FloralWhite"
                            WidthRequest="180"
                            VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Label Text="Golf Club Selection"
                       FontAttributes="Bold"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="FloralWhite"
                       Margin="0,12,0,0" />

                <!-- Replace FillAndExpand with a Grid -->
                <Grid ColumnSpacing="12"
                      Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Text="Return"
                            BackgroundColor="IndianRed"
                            TextColor="Black"
                            Clicked="OnReturnClicked"
                            Grid.Column="0"
                            HorizontalOptions="Start" />

                    <Button Text="Save to PDF"
                            x:Name="savePdfButton"
                            Clicked="OnSaveToPdfClicked"
                            BackgroundColor="DarkSeaGreen"
                            TextColor="Black"
                            Grid.Column="1"
                            HorizontalOptions="End" />
                </Grid>

                <!-- Table Grid: Expand not needed; Fill is fine or omit entirely -->
                <Grid x:Name="courseGrid"
                      Margin="0,8,0,0"
                      ColumnSpacing="4"
                      RowSpacing="2"
                      HorizontalOptions="Fill">

                    <Grid.Resources>
                        <Style TargetType="Label">
                            <Setter Property="TextColor" Value="Black" />
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Label Text="Hole" Grid.Column="0" />
                    <Label Text="1" Grid.Column="1" />
                    <Label Text="2" Grid.Column="2" />
                    <Label Text="3" Grid.Column="3" />
                    <Label Text="4" Grid.Column="4" />
                    <Label Text="5" Grid.Column="5" />
                    <Label Text="6" Grid.Column="6" />
                    <Label Text="7" Grid.Column="7" />
                    <Label Text="8" Grid.Column="8" />
                    <Label Text="9" Grid.Column="9" />
                    <Label Text="10" Grid.Column="10" />
                    <Label Text="11" Grid.Column="11" />
                    <Label Text="12" Grid.Column="12" />
                    <Label Text="13" Grid.Column="13" />
                    <Label Text="14" Grid.Column="14" />
                    <Label Text="15" Grid.Column="15" />
                    <Label Text="16" Grid.Column="16" />
                    <Label Text="17" Grid.Column="17" />
                    <Label Text="18" Grid.Column="18" />

                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
